# editorconfig.org
root = true

# 全局配置
[*]
charset = utf-8                     # 使用 UTF-8 编码
end_of_line = lf                   # 使用 Unix 风格换行符（lF）
insert_final_newline = true         # 文件末尾添加一个换行符
trim_trailing_whitespace = true     # 删除行尾多余的空白字符
indent_style = space                # 缩进风格为空格
indent_size = 2                     # 缩进大小为 2 个空格

# Markdown 文件
[*.md]
trim_trailing_whitespace = false    # 允许行尾空格（比如换行符）

# 针对 Koa 项目的配置
[*.{js,ts}]
max_line_length = 120  # 最大行长度 120 字符