{
  "name": "koa_template",
  "version": "1.0.0",
  "description": "koa服务模板",
  "license": "MIT",
  "author": "chocolate",
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=10.x"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon ./bin/www",
    "start": "pm2 start ecosystem.config.js --env pro",
    "test": "pm2 start ecosystem.config.js --env test",
    "commit": "git add . && git-cz",
    "lint:staged": "lint-staged",
    "prepare": "husky"
  },
  "keywords": [
    "koa",
    "template"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@eslint/json": "^0.13.2",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "oxlint": "^1.14.0",
    "prettier": "3.6.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}